<header class="header">
  <%= link_to '取組追加', new_goal_path, class: 'add-button' %>
  <%= link_to 'ログアウト', root_path, class: 'logout-button' %>
</header>

<h1 class="h1">取組一覧</h1>

<div class="table-container">
  <table class="table">
    <thead>
      <tr class="tr">
        <th class="label_title">タイトル</th>
        <th class="label_date">作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @goals.each do |goal| %>
        <tr>
          <td class="th">
            <%= link_to goal.title, goal_path(goal) %>
          </td>
          <td class="td"><%= goal.created_at.strftime("%Y年%m月%d日") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
